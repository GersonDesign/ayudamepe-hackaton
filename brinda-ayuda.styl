@import 'nib'
@import 'landing'    

img
	max-width 100%

body
	font-size 16px 
	
.blockA
	margin-top 15px
	
.blockB
	margin-top 15px

.blockC
	a
		background #5CA1BB
		border 2px solid #104F78
		color white
		display block
		padding 10px 30px
		
		text-align center
	
.blockExtra
	h3
		background #5CA1BB
		border 2px solid #104F78
		color white
		font-weight bold
		padding 7px 0
		text-align center
	.financiaFuturo
		.bottom
			figure
				img
					height 80px
			.barra
				
				p
					border 2px solid #104F78
					margin 2px 0
					&:nth-of-type(1)
						background #5CA1BB
						color white
					&:nth-of-type(2)
						color  #104F78
					
				
@media screen and (max-width: 567px)
	.blockC
		a
			margin-top 20px
		.btnYape
			figure
				margin-top 10px
				text-align center 

	.blockExtra
		.financiaFuturo
			.bottom
				figure
					text-align center

		
@media screen and (min-width: 568px)
	.blockC
		display flex
		justify-content space-around
		a
			display block 
		.btnYape
			display flex
			img
				height 80px
	.blockExtra
		.financiaFuturo
			.bottom
				display flex 
				.barra
					display flex
					p
						&:nth-of-type(1)
							width 20%
						&:nth-of-type(2)
							width 80%




